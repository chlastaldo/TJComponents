			&:-ms-input-placeholder { color: $form_option_color; }
			&:-moz-placeholder { color: $form_option_color; }
		}
		.select-group
		{
			padding: 16px 5px 5px 5px;
			line-height: 1;
			font-size: 13px;
			font-weight: 600;
			cursor: default;
			color: $form_option_color;
			white-space: nowrap;
		}
		.select-option
		{
			padding: 5px;
			line-height: 1;
			font-size: 13px;
			cursor: pointer;
			color: $form_option_color;
			white-space: nowrap;

			&:hover,
			&.active
			{
				background-color: $form_option_fill_background;
				color: $form_option_fill_color;
			}
		}
	}

	&:hover
	{
		.input
		{
			&:after
			{
				opacity: 0.3;
			}
		}
	}

