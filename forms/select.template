	&.fill{ @form_fill; }

	&.focus,
	&.fill
	{
		.input
		{
			color: $form_color_fill;
			margin-bottom: 1px;
		    margin-top: 19px;

			&:after
			{
				opacity: 0.7;
			}
		}

		label
		{
			top: 0;
			font-size: 11px;
			color: $form_label_fill_color;
		}

		&.not-label
		{
			.input
			{
				margin-bottom: 10px;
			    margin-top: 10px;
			}
		}
	}
	&.focus
	{
		.select-wrap
		{
			height: auto;
			background-color: #fff;
			z-index: 999;
			margin-left: -1px;
			@form_focus;
		}
	}

	&.small
	{
		height: 32px;
		line-height: 30px;

		.input
		{
			height: 30px;
			line-height: 30px;
			margin: 0;
		}
		.select-wrap
		{
			top: 30px;
		}
		&.focus,
		&.fill
		{
			.input
			{
				height: 30px;
				line-height: 30px;
				margin: 0;
			}
		}
	}
}
